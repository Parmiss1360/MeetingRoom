
@model MettingRoom.Model.Events



@if (ViewData.ModelState.IsValid == false)
{
    <div class="alert alert-danger" asp-validation-summary="All"></div>
    
}
<div c id="myModal" class="modal fade bd-example-modal-xl" style="width:100%">
    <div class="modal-dialog " style="height:600px ; width:500px">
        <div class="modal-content ">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title"></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">


                <form asp-action="Create">





                    <input type="hidden" value="@ViewBag.IsFull" name="check" id="check" />
                    <input type="hidden" value="@ViewData.ModelState.IsValid.ToString()" name="hidden" id="hid" />


                    <div class="form-group ">
                        <label asp-for="Start.TimeZone" class="control-label">Startdate</label>
                        <input id="basic_example_1" asp-for="Start.DateTime" class="form-control " >
                       

                        <span asp-validation-for="Start.TimeZone" class="text-danger"></span>
                    </div>

                    <div>
                        <div class="form-group">
                            <label asp-for="End.TimeZone" class="control-label">Enddate</label>
                            <input id="basic_example_2" asp-for="End.DateTime" class="form-control ">
                            <span asp-validation-for="End.TimeZone" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Attendees" class="form-control-label">Attendees</label>

                            <select class="js-example-basic-multiple form-control-range" multiple="multiple" asp-for="AttenndesMejl" asp-items="ViewBag.AuthorID"></select>




                            <span asp-validation-for="Attendees" class="text-danger"></span>
                        </div>
                    </div>




                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>

                        <button type="button" class="btn btn-success ml-1" data-save="modal" id="btn1">Create</button>
                    </div>

                </form>
            </div>




            <!-- Modal footer -->


        </div>
    </div>
</div>



<script type="text/javascript">
    $(function () {
  $('#example').datetimepicker();
});
      var d1 = new Date ();
    d2 = new Date ( d1 );
    d2.setMinutes ( d1.getMinutes() + 30 );

    $('#basic_example_1').datetimepicker({
               sideBySide: true
            });
     $('#basic_example_2').datetimepicker({
               sideBySide: true
            });
     $("#basic_example_1").data("DateTimePicker").date(new Date());
     $("#basic_example_2").data("DateTimePicker").date(d2);


          $("#basic_example_1").on( "dp.change", function() {

     var startdate = Date.parse($('#basic_example_1').val());
     d3 = new Date ( startdate );
     d3.setMinutes (d3.getMinutes()+60 );
     $("#basic_example_2").data("DateTimePicker").date(d3);
})

</script>


<script type="text/javascript">
$(document).ready(function() {
    $('.js-example-basic-multiple').select2();
});</script>


